<?xml version="1.0"?>
<ruleset name="PHP_CodeSniffer">

    <arg name="tab-width" value="4" />

    <file>src</file>

    <rule ref="PSR2">
        <exclude name="Generic.Files.LineLength"/>
    </rule>

    <rule ref="Generic.Files.LineEndings">
        <properties>
            <property name="eolChar" value="\n"/>
        </properties>
    </rule>

    <rule ref="PEAR.WhiteSpace.ObjectOperatorIndent"/>
</ruleset>
